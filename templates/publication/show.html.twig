{% extends 'base.html.twig' %}

{% block title %}Publication
{% endblock %}

{% block body %}
	<main id="main" class="main">
		<section class="section">
			<div class="row">
				<div class="col-lg-12">
					<h1>Publication</h1>

					<div class="col-12">
						<div class="card">
							<div class="card-body">

								<img src="/admin/img/profile-img.jpg" alt="Profile" class="rounded-circle" width="50">


								<h5 class="card-title">{{ publication.iduser }}</h5>


								<hr>
								<span>Published on:
									{{ publication.datePublication|date('m/d/Y') }}</span>
								<div class="container">
									<h1>{{ publication.contenu }}</h1>
									<hr>
									{% if publication.urlimage %}
										<img src="{{"http:\\\\localhost\\"~publication.urlimage| slice(16) }}" alt="..." class="card-img-bottom" width="250">
										<hr>
									{% endif %}
								</div>
							</div>
							<table class="table">
								<thead>
									<tr>
										<th>Id</th>
										<th>Iduser</th>
										<th>Contenu</th>
										<th>Idpub</th>
										<th>actions</th>
									</tr>
								</thead>
								<tbody>
									<a href="{{ path('app_commentaire_new') }}">Create new</a>

									{% for commentaire in commentaires %}
										<tr>
											<td>{{ commentaire.id }}</td>
											<td>{{ commentaire.iduser }}</td>
											<td>{{ commentaire.contenu }}</td>
											<td>{{ commentaire.idpub }}</td>
											<td>
												<a href="{{ path('app_commentaire_show', {'id': commentaire.id}) }}">show</a>
												<a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}">edit</a>

											</td>
										</tr>
									{% else %}
										<tr>
											<td colspan="5">no records found</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
							<a href="{{ path('app_publication_index') }}">back to list</a>


							<button type="button" class="btn btn-outline-success ml-auto" onclick="window.location.href='{{ path('app_publication_edit', {'id': publication.id}) }}'">Edit</button>
							{{ include('publication/_delete_form.html.twig') }}

						</div>
					</div>
				</div>
			</div>
		</section>

	</main>
	<!-- End #main -->

{% endblock %}
