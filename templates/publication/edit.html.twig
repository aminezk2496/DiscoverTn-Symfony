{% extends 'base.html.twig' %}

{% block title %}Edit Publication
{% endblock %}

{% block body %}
	<main id="main" class="main">
		<section class="section">
			<div class="row">
				<div class="col-lg-12">

					<div class="card">
						<div class="card-body">
							<h1>Edit Publication</h1>
							{{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}

							<table class="table">
								<tr>
									<td>
										{{ form_label(form.contenu,"contenu : ") }}
									</td>
									<td>
										{{ form_widget(form.contenu) }}
									</td>
									<td>{{ form_errors(form.contenu) }}</td>
								</tr>


								<tr>
									<td>
										{{ form_label(form.urlimage,"Image : ") }}
									</td>
									<td>
										{{ form_widget(form.urlimage) }}
									</td>
									<td>{{ form_errors(form.urlimage) }}</td>
								</tr>


								{{ form_row(form.Submit) }}
								{{ form_end(form) }}
							</table>
						</div>
					</div>
				</div>
			</div>
		</section>

	</main>
	<!-- End #main -->

{% endblock %}
