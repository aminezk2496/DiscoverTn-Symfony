{% extends 'base-admin.html.twig' %}

{% block title %}
	Reservation
{% endblock %}


{% block body %}
	<main id="main" class="main">
		<style>
			.example-wrapper {
				margin: 1em auto;
				max-width: 800px;
				width: 95%;
				font: 18px / 1.5 sans-serif;
			}
			.example-wrapper code {
				background: #F5F5F5;
				padding: 2px 6px;
			}
		</style>
		<main id="main" class="main">
			<section class="section">
				<div class="row">
					<div class="col-lg-12">
						<h1>Liste des Reservations</h1>
						<div class="card">
							<div
								class="card-body">
								<!-- Table with stripped rows -->


								<table>
									<thead>
										<tr>
											<th>Nom</th>
											<th>Date</th>
											<th>Duree</th>
										</tr>
									</thead>
									<tbody>
										{% for reservation in reservations %}
											<tr>
												<td>{{ reservation.getNomHeber() }}</td>
												<td>{{ reservation.getDateReser()|date('Y-m-d') }}</td>
												<td>{{ reservation.getDuree() }}</td>
											</tr>
										{% endfor %}

										<div class="pagination">
											{{ knp_pagination_render(reservations) }}
										</div>

									</tbody>
								</table>

								<!-- End Table with stripped rows -->
							</div>
						</div>
					</div>
				</div>
			</section>

		</main>
		{% for flash_message in app.session.flashbag.get('success') %}


			<div class="notification alert alert-success alert-dismissible fade show">

				{{ flash_message }}

				<span class="notification-close" data-bs-dismiss="alert"></span>

			</div>


		{% endfor %}
	{% endblock %}
