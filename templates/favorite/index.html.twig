{% extends 'base-front.html.twig' %}

{% block title %}Favorite {% endblock %}

{% block body %}
    
<main id="main" class="main">
		<section class="section">
			<div class="row">
				<div class="col-lg-12">
					<h1>Favorite </h1>

					<div class="col-12">
						<div class="card">
							<div class="card-body">
    <table class="table">
        <thead>
            <tr>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for favorite in favorites %}
            <tr>
                <td>{{ favorite.createdAt ? favorite.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_favorite_show', {'idF': favorite.idF}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
					</div>
				</div>
			</div>
		</section>

	</main>
{% endblock %}
