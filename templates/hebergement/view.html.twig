
{% extends 'base-admin.html.twig' %}

{% block body %}
    <main id="main" class="main">
        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <h1>Liste des Hebergements</h1>

                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">



                                <table>
                                    <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Descripion</th>
                                        <th>Nbr Chambre</th>
                                        <th>Prix</th>
                                        <th>Localisation</th>
                                        <th>Contact</th>
                                        <th>Type</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for hebergement in hebergements %}
                                        <tr>
                                            <td>{{ hebergement.getNomHeber() }}</td>
                                            <td>{{ hebergement.getDescriptionHeber() }}</td>
                                            <td>{{ hebergement.getNbChambre() }}</td>
                                            <td>{{ hebergement.getPrixHeber() }}</td>
                                            <td>{{ hebergement.getLocalisationHeber() }}</td>
                                            <td>{{ hebergement.getContactHeber() }}</td>
                                            <td>{{ hebergement.getTypeHeber() }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
        </section>

    </main>
{% endblock %}