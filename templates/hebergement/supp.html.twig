{% extends 'base-admin.html.twig' %}

{% block body %}
	<main id="main" class="main">
		<section class="section">
			<div class="row">
				<div class="col-lg-12">
					<h1>Hebergements</h1>

					<div class="col-12">
						<div class="card">
							<div class="card-body">

								<form method="post" action="{{ path('delete_entity', {'id': entity.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
									<input type="hidden" name="_method" value="DELETE">
									<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entity.id) }}">
									<button type="submit" class="btn btn-danger">Delete</button>
								</form>

							</div>
						</div>
					</div>
				</div>
			</section>

		</main>
	{% endblock %}
