{% extends 'base-front.html.twig' %}
{% block body %}
    <div class="main">

        <div class="shop_top">
            <div class="container">
                {% for flash in app.flashes("warning") %}
                    <div class="alert alert-danger">
                        {{ flash }}
                    </div>
                {% endfor %}
                {% for evenement in eventRs %}
                    <div class="col-md-3 shop_box"><a href="single.html">
                            <img src="{{"http:\\\\localhost\\"~evenement.imageEvenement | slice(16) }}" class="img-responsive" alt="">
                            {#  <img src="{{/images/evenements/evenement.imageEvenement }}" alt="">#}
                            <span class="new-box">
						<span class="new-label">New</span>
                        </a><div class="shop_desc"><a href="single.html">
                            </a><h3><a href="single.html"></a><a href="#">{{ evenement.titreEvenement }}</a></h3>
                            <p>{{ evenement.descriptionEvenement}} </p>
                            <span class="actual">{{ evenement.lieuEvenement }}</span>
                            <span class="actual">{{ evenement.dateEvenement | date('d-m-Y') }}</span><br>
                            <ul class="buttons">
                                <li class="cart"><a href="{{ path('pdf_reservation_evenement',{'id':evenement.idEvenement}) }}">Exporter</a></li>
                                <br>
                                <li class="cart"><a href="{{ path('checkout',{'id':evenement.idEvenement}) }}">Pay</a></li>
                                <li class="shop_btn"><a href="{{ path('delete_reservation_evenement_client',{'id':evenement.idEvenement}) }}">Undo</a></li>

                                <div class="clear"> </div>
                            </ul>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}