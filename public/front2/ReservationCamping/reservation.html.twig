{% extends 'base-admin.html.twig' %}

{% block title %}Reservations{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <main id="main" class="main">
        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <!-- Table with stripped rows -->


                            <table class="table datatable">
                                <thead>
                                <tr>
                                    <th scope="col">Nom</th>
                                    <th scope="col">adresse</th>
                                    <th scope="col">image</th>
                                    <th scope="col">telephone</th>
                                    <th scope="col">rating</th>
                                    <th scope="col">description</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for camping in campres %}
                                    <tr>
                                        <td>{{ camping.nomCamping}}</td>
                                        <td>{{ camping.adresseCamping }}</td>
                                        <td><img  src="{{ "http:\\\\localhost\\" ~ camping.imageCamping| slice(16) }}" class="img-responsive" title="continue" style="height: 100px ; width: 100px" alt="{{ "http:\\\\localhost\\" ~ camping.imageCamping| slice(16) }}"/></td>
                                        <td>{{ camping.telephoneCamping }}</td>
                                        <td>{{ camping.descriptionCamping}}</td>
                                        <td>            <button type="button" class="btn btn-danger"><a style="color: #fff" href="{{ path('delete_reservation_camping',{'idCamping':camping.idCamping }) }}">supprimer</a></button></td>

                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <!-- End Table with stripped rows -->
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </main><!-- End #main -->

{% endblock %}
